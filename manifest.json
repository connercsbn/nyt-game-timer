{
  "manifest_version": 3,
  "name": "Game Timer",
  "description": "Time Your NYT Games",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "scripts/worker.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://*.nytimes.com/games/strands*",
        "https://*.nytimes.com/games/connections*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.nytimes.com/games/strands*",
    "https://*.nytimes.com/games/connections*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gametimer@connersbrianwebsite.xyz"
    }
  }
}
